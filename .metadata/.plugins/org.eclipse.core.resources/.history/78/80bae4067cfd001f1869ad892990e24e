package day08;

public class Class03 {
	public static void main(String[] args) {
		
	}
}

// day08 의 Class02 에 Car 라는 클래스가 이미 존재하기 때문에
// class Car { } 와 같이 작성한다면 Error

// Class02 의 예제에 나온 메소드 + 문의 개수를 출력하는 메소드 
// 메소드 1) display() - 차량 정보를 출력하는 메소드
// 메소드 1.1) speedDisplay() - 속도와 시동 정보만 출력하는 메소드
// 메소드 2) start() - 시동을 켜고 끄는 메소드 (시동이 꺼져있으면 키고 켜져있으면 끔)
// 메소드 3) speed() - 속력을 조절하는 메소드
// 메소드 4) door() - 문의 개수를 출력하는 메소드 
// 메소드 5) Getter () 와 Setter


class CustomCar{
 private // 멤버 변수
  boolean power; 
 	String name, color, year;
 	int speed, door;
 	
 
 public // 메소드 
 	void display() {
	 System.out.println("<나의 자동차 정보>");
	 System.out.println("자동차 이름 : " + getName());
	 System.out.println("자동차 색상 : " + getColor());
	 System.out.println("자동차 연식 : " + getYear());
	 System.out.println("----------------------------");
	 
	 System.out.println("시동 (ON / OFF) : " + isPower());
	 
 }

 	
 	// 메소드 5) Getter() 와 Setter()
	public boolean isPower() {
		return power;
	}
	
	
	public void setPower(boolean power) {
		this.power = power;
	}
	
	
	public String getName() {
		return name;
	}
	
	
	public void setName(String name) {
		this.name = name;
	}
	
	
	public String getColor() {
		return color;
	}
	
	
	public void setColor(String color) {
		this.color = color;
	}
	
	
	public String getYear() {
		return year;
	}
	
	
	public void setYear(String year) {
		this.year = year;
	}
	
	
	public int getSpeed() {
		return speed;
	}
	
	
	public void setSpeed(int speed) {
		this.speed = speed;
	}
	
	
	public int getDoor() {
		return door;
	}
	
	
	public void setDoor(int door) {
		this.door = door;
	}
 
}
